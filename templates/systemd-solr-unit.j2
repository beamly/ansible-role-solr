[Unit]
Description=Apache SOLR
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
PIDFile={{ solr_base_path }}/solr-{{ solr_port }}.pid
ExecStart={{ solr_working_path }}/bin/solr start
User={{ solr_user }}
ExecReload={{ solr_working_path }}/bin/solr restart
ExecStop={{ solr_working_path }}/bin/solr stop
PrivateTmp=true
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

